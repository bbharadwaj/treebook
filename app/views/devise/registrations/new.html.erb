<div class ="row">
  <div class="span4">

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
 


    <fieldset>
      <legend>Sign Up</legend>
      <%= f.input :email %>
      <%= f.input :password %>

      <%if devise_mapping.rememberable? %>
        <div><%= f.input :remember_me, as: :boolean %></div>
      <% end %>

      <div><%=f.submit "Sign in", class:"btn btn-success" %></div>
    </fieldset>
    <% end %>

    
  </div>

  <div class = "span8">
    <h2>Sign up now and be part of the biggest social network in the world</h2>
  </div>

